{
  "pkg": "grunt.file.readJSON(\"package.json\")",

  "watch": {
    "all": {
      "files": [
        "Gruntfile.coffee",
        "initGruntTasks.json",
        "dev/*.*",
        "dev/**\/{,*\/}*.*"
      ],
      "tasks": [
        "jade:html",
        "jade:base_path",
        "wiredep",
        "coffeelint:app",
        "coffee",
        "jshint:all",
        "fileblocks"
      ]
    },
    "options": {
      "livereload": "<%= connect.options.livereload %>",
      "reload": false,
      "debounceDelay": 10,
      "event": ["changed", "added", "deleted"],
      "atBegin": true
    }
  },
  "wiredep": {
    "task": {
      "src": "app/index.html"
    }
  },

  "jade": {
    "html": {
      "files": {
        "./app/": "./dev/index.jade"
      },
      "options": {
        "pretty": true,
        "client": false,
        "wrap": false,
        "compileDebug": true
      }
    },
    "base_path": {
      "files": {
        "app/partials/": ["dev/partials/{,*\/}*.jade"]
      },
      "options": {
        "pretty": true,
        "client": false,
        "compileDebug": true,
        "basePath": "./dev/partials/"
      }
    }
  },
  "copy": {
    "main": {
      "files": [
        {
          "expand": true,
          "cwd": "dev/assets/",
          "src": ["**", "**\/*.css"],
          "dest": "app/assets"
        }
      ]
    }
  },
  "coffeelint": {
    "app": [ "Gruntfile.coffee", "dev/scripts/{,*\/}*.coffee"],
    "options": {
      "configFile": "coffeelint.json"
    }
  },
  "jshint":  {
    "all": ["app/scripts/app.js", "app/scripts/{,*\/}*.js"]
  },
  "coffee": {
    "glob_to_multiple": {
      "expand": true,
      "bare": true,
      "flatten": false,
      "cwd": "dev/scripts",
      "src": "{,*\/}*.coffee",
      "dest": "app/scripts/",
      "ext": ".js"
    }
  },


  "connect": {
    "options": {
      "hostname": "localhost",
      "livereload": 35729,
      "port": 3000
    },
    "server": {
      "options": {
        "base": ["./app", "./"],
        "open": true
      }
    }
  },
  "fileblocks": {
    "todos": {
      "src": "./app/index.html",
      "blocks": {
        "app": {
          "src":"app/scripts/{,*\/}*.js"
        }
      }
    }
  },
  "karma": {
    "unit": {
      "configFile": "karma.conf.coffee"
    }
  }
}